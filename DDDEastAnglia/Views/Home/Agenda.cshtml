@model DDDEastAnglia.Models.Agenda

@{
    ViewBag.Title = "Agenda";
}

@Styles.Render("~/Content/Site_print")

<style>
    hr {
        height: 1px;
        background: black;
        border: 1px;
        margin: 5px 0;
    }

    table, th, td {
        border: 1px solid black;
    }

    tr > td:first-child {
        font-weight: bold;
    }

    th, td {
        padding: 4px;
        vertical-align: top;
        width: 19%;
    }

    .timeCell {
        text-align: center;
        width: 5%;
    }

    .nonSession {
        background-color: #f5f5f5;
    }

    .nonSession td img {
