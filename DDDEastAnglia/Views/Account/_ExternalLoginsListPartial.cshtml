@model ICollection<AuthenticationClientData>

@if (Model.Count > 0)
{
    using (Html.BeginForm("ExternalLogin", "Account", new { ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
    
        <fieldset id="socialLoginList">
            <legend>Use an external service to log in</legend>
            <p>
                <button type="submit" class="btn" name="provider" value="github" title="Log in using your GitHub account"><i class="icon-github"></i> GitHub</button>
                <button type="submit" class="btn" name="provider" value="twitter" title="Log in using your Twitter account"><i class="icon-twitter"></i> Twitter</button>
                <button type="submit" class="btn" name="provider" value="google" title="Log in using your Google account"><i class="icon-google-plus"></i> Google</button>
            </p>
        </fieldset>
    }
}
