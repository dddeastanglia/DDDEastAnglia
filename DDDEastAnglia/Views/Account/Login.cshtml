@model DDDEastAnglia.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}

<h2>Please log in to continue</h2>

<section class="social" id="socialLoginForm">
    @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })
</section>

<section id="loginForm">
@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl })) 
{
    @Html.AntiForgeryToken()

    <fieldset>
        <legend>Use a local account to log in</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </li>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </li>
            <li>
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox inline" })
            </li>
        </ol>
        @Html.ValidationSummary(true)
        <input type="submit" class="btn" value="Log in" />
    </fieldset>

    <div id="registerLink">
        <p>If you do not already have one, please @Html.ActionLink("register for an account", "Register").</p>
    </div>
}
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
