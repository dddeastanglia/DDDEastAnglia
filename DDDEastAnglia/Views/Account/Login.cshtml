@model DDDEastAnglia.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}

<h2>Please log in to continue</h2>

<section id="socialLoginForm">
    @Html.Action("ExternalLoginsList", new { ViewBag.ReturnUrl })
</section>

<section id="loginForm">
@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal"})) 
{
    @Html.AntiForgeryToken()

    <fieldset>
        <legend>Use a local account to log in</legend>

        @Html.ValidationSummary(true)

        <div class="control-group">
            @Html.LabelFor(m => m.UserName, new { @class = "control-label", autofocus = true })
            <div class="controls">
                @Html.TextBoxFor(m => m.UserName)
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(m => m.Password, new { @class = "control-label" })
            <div class="controls">
                @Html.PasswordFor(m => m.Password)
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>

        <div class="control-group">
            <div class="controls">
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox inline" })
            </div>
        
        </div>

        <div class="control-group">
            <div class="controls">
                <input type="submit" class="btn btn-primary" value="Log in" />
            </div>
        </div>
    </fieldset>

    <div id="registerLink">
        <p>If you do not already have one, please @Html.ActionLink("register for an account", "Register").</p>
    </div>
}
</section>

@section Scripts 
{
    @Scripts.Render("~/bundles/jqueryval")

    <script language="javascript">
        $(document).ready(function() {
            $('#UserName').focus();
        });
    </script>
}
