@model DDDEastAnglia.Models.UserProfile

@{
    var displayedName = (string.IsNullOrWhiteSpace(Model.Name) ? Model.UserName : Model.Name);
    ViewBag.Title = string.Format("Delete {0}?", displayedName);
}

<h2>@ViewBag.Title</h2>

<p>Deleting a user cannot be undone. Are you <em>really</em> sure you want to delete this user?</p>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <p>
        <input type="submit" class="btn btn-danger" value="Delete user" />
        @Html.ActionLink("Cancel", "Index")
    </p>
}
